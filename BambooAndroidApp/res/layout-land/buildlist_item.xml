<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/buildstatus"
        android:layout_width="25dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/buildTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buildstatus"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/buildstatus"
        android:text="Build Number"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/buildreason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buildstatus"
        android:layout_alignLeft="@+id/buildTitle"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/buildTitle"
        android:text="Reason"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/buildtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buildreason"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/buildTitle"
        android:layout_marginRight="15dp"
        android:text="TimeStamp"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
