<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/changetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/changes"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/commTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/changetitle"
        android:layout_margin="10dp"
        android:text="@string/change_comments"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" 
        android:padding="3dp" 
        android:background="@drawable/grayrounded"
        android:gravity="center"/>

    <ListView
        android:id="@+id/commLV"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/commTitle"
        android:paddingLeft="5dp" >
    </ListView>

    <TextView
        android:id="@+id/filesTitle"
       android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commLV"
        android:padding="3dp"
        android:layout_margin="10dp"
        android:text="@string/changed_files"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:background="@drawable/grayrounded"
        android:gravity="center" />

    <ListView
        android:id="@+id/changesLV"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/filesTitle"
        android:paddingLeft="5dp" >
    </ListView>

</RelativeLayout>