<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/changetitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/changes"
        android:textSize="25sp"
        android:layout_margin="10dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/commTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/grayrounded"
        android:gravity="center"
        
        android:layout_below="@+id/changetitle"
        
        android:padding="5dp"
        android:text="@string/change_comments"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/commLV"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/commTitle"
        android:paddingLeft="10dp"
        android:paddingTop="10dp" >
      
    </ListView>

    <ListView
        android:id="@+id/changesLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filesTitle"
        android:paddingLeft="10dp" >
    </ListView>


    <TextView
        android:id="@+id/filesTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/commLV"
        android:background="@drawable/grayrounded"
        android:gravity="center"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/changed_files"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />

</RelativeLayout>